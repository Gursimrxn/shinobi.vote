{
  "name": "shinobi.vote",
  "private": true,
  "version": "0.0.1",
  "description": "Anonymous DAO voting platform with gasless transactions",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web:dev": "npm run dev --workspace web",
    "web:lint": "npm run lint --workspace web",
    "web:build": "npm run build --workspace web",
    "web:start": "npm run start --workspace web",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "keywords": [
    "blockchain",
    "celo",
    "identity",
    "hardhat",
    "solidity",
    "zero-knowledge"
