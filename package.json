{
  "name": "ghostapp",
  "private": true,
  "version": "0.0.1",
  "description": "Ghost App - A decentralized social application with identity anchoring on CELO",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web:dev": "npm run dev --workspace web",
    "web:lint": "npm run lint --workspace web",
    "web:build": "npm run build --workspace web",
    "web:start": "npm run start --workspace web",
    "hardhat:build": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:clean": "hardhat clean",
    "hardhat:deploy:alfajores": "hardhat run scripts/deploy.ts --network alfajores",
    "hardhat:lint": "hardhat check"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/merkle-tree": "^1.0.8"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/chai": "^4.3.0",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.12.7",
    "chai": "^4.4.1",
    "dotenv": "^16.6.1",
    "hardhat": "^2.19.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  },
  "keywords": [
    "blockchain",
    "celo",
    "identity",
    "hardhat",
    "solidity",
    "zero-knowledge"
  ],
  "author": "",
  "license": "ISC"
