{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "hardhat"],
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "include": ["./scripts", "./test", "./hardhat.config.ts"],
  "exclude": ["./dist", "./node_modules"]
}
